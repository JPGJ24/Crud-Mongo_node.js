<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<title>Crear Usuarios</title>
<style>
    .container{
        max-width:  960px;
    }
</style>

</head>
<body>
        <div class="container mt-5">
           <div class="shadow-lg pb-3 mb-5 bg-body rounded">
                <h4 class="text-center ">DATOS REQUERIDOS</h4>

                <form action="/crear" method="post">
                    <div class="mx-5">
                        <label for="name" class="form-label"><strong>Nombre</strong></label>
                        <input type="text" id="name" name="name" class="form-control" required> 
                    </div>
                    <div class="mx-5">
                        <label for="edad" class="form-label"><strong>Edad</strong></label>
                        <input type="number" id="edad"  name="edad" class="form-control " required> 
                    </div>

                    <div class="d-grid gap-2 col-6 mx-auto">
                       <button class=" btn-success w-100 btn-lg btn   mt-5" type="submit">Registrar</button>
                      </div>
                </form>

                <table id="tablaUser" class="table mt-4 mx-auto">
                    <thead>
                        <tr>
                            <th style="display: none;">ID</th>
                            <th>Nombre</th>
                            <th>Edad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% User.forEach( (users) => { %>
                            <tr>
                                <td style="display: none;"><%= users._id %></td>
                                <td><%= users.name %></td>
                                <td><%= users.edad %></td>
                                <td>
                                    <a type="button"  class="btnEditar btn btn-outline-success"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                      </svg></a>
                                    <a href="/borrar/<%= users._id %>" class="btnEditar btn btn-outline-danger"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                      </svg></a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>


           </div> 

           <div id="modalUser" class="modal fade" tabindex="-1" aria-labelledby="modalUser" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                  <h5 class="modal-title" id="exampleModalLabel">Editar Info</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form action="/editar" method="POST">
                      <input name="id_editar" id="id_editar" type="text" hidden>
                    <div class="mb-3">
                      <label for="nombre_editar" class="col-form-label">Nombre:</label>
                      <input id="nombre_editar" name="nombre_editar" type="text" class="form-control" value="">
                    </div>
                    <div class="mb-3">
                      <label for="edad_editar" class="col-form-label">Edad:</label>
                      <input id="edad_editar" name="edad_editar" type="number" class="form-control" value="">
                    </div>
                </div>
                <div class="modal-footer">              
                  <button type="submit" class="btn btn-primary">Actualizar</button>
                </div>
              </form>
              </div>
            </div>

        </div>




    <!-- JavaScript Bundle with Popper -->

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="js/code.js"></script>
</body>

</html>